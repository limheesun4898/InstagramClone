<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignupActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_centerInParent="true"
       android:layout_marginRight="30sp"
       android:layout_marginLeft="30sp"
       android:gravity="center">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="이름 및 비밀번호"
           android:textColor="#000"
           android:textStyle="bold"
           android:textSize="16sp"/>

       <EditText
           android:id="@+id/edit_email"
           android:layout_width="match_parent"
           android:layout_height="50sp"
           android:layout_marginTop="20sp"
           android:background="@drawable/login_background"
           android:hint="이메일"
           android:textSize="12sp"
           android:paddingLeft="15sp"
           android:inputType="textEmailAddress"/>

       <TextView
           android:id="@+id/text_email"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="올바른 이메일 주소를 입력하세요."
           android:visibility="invisible"
           android:textStyle="bold"
           android:textColor="#F50F0F"
           android:layout_marginTop="5sp"
           android:layout_marginBottom="5sp"
           android:textSize="12sp"/>

       <EditText
           android:id="@+id/edit_name"
           android:layout_width="match_parent"
           android:layout_height="50sp"
           android:background="@drawable/login_background"
           android:hint="성명"
           android:textSize="12sp"
           android:paddingLeft="15sp"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="이메일이 규칙에 맞게 써주세요."
           android:visibility="invisible"
           android:textStyle="bold"
           android:textColor="#F50F0F"
           android:layout_marginTop="5sp"
           android:layout_marginBottom="5sp"
           android:textSize="12sp"/>

       <EditText
           android:id="@+id/edit_nickname"
           android:layout_width="match_parent"
           android:layout_height="50sp"
           android:background="@drawable/login_background"
           android:hint="닉네임"
           android:textSize="12sp"
           android:paddingLeft="15sp"/>

       <TextView
           android:id="@+id/text_nickname"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="이메일이 규칙에 맞게 써주세요."
           android:visibility="invisible"
           android:textStyle="bold"
           android:textColor="#F50F0F"
           android:layout_marginTop="5sp"
           android:layout_marginBottom="5sp"
           android:textSize="12sp"/>

       <EditText
           android:id="@+id/edit_password1"
           android:layout_width="match_parent"
           android:layout_height="50sp"
           android:background="@drawable/login_background"
           android:hint="비밀번호"
           android:textSize="12sp"
           android:paddingLeft="15sp"
           android:inputType="textPassword"/>

       <TextView
           android:id="@+id/text_password1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="문자,숫자,특수기호포함 8자리 이상 20자리 이하"
           android:visibility="invisible"
           android:textStyle="bold"
           android:textColor="#F50F0F"
           android:layout_marginTop="5sp"
           android:layout_marginBottom="5sp"
           android:textSize="12sp"/>
       <EditText
           android:id="@+id/edit_password2"
           android:layout_width="match_parent"
           android:layout_height="50sp"
           android:background="@drawable/login_background"
           android:hint="비밀번호 재확인"
           android:textSize="12sp"
           android:paddingLeft="15sp"
           android:inputType="textPassword"/>
       <TextView
           android:id="@+id/text_password2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="위 비밀번호와 같지 않습니다."
           android:visibility="invisible"
           android:textStyle="bold"
           android:textColor="#F50F0F"
           android:layout_marginTop="5sp"
           android:layout_marginBottom="5sp"
           android:textSize="12sp"/>
       <Button
           android:id="@+id/btn_signup"
           android:layout_width="match_parent"
           android:layout_height="50sp"
           android:background="@drawable/login_buttonbaground"
           android:text="회원가입"
           android:textColor="#fff" />
   </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DD979393" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미 계정이 있으신가요?" />

            <TextView
                android:onClick="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  로그인하기"
                android:textColor="#000" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>